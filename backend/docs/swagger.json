            },
            "password": {
              "type": "string",
              "minLength": 8,
              "example": "password"
            }
          }
        },
        "SignInResponse": {
          "type": "object",
          "required": [
            "token",
            "refreshToken",
            "user"
          ],
          "properties": {
            "token": {
              "type": "string"
            },
            "refreshToken": {
              "type": "string"
            },
            "user": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "John Doe"
                },
                "email": {
                  "type": "string",
                  "format": "idn-email",
                  "example": "example@email.com"
                },
                "phone": {
                  "type": "string",
                  "example": "+380123456789"
                }
              }
            }
          }
        }
      }
    }
  }