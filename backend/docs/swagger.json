            },
            "residential_complex": {
              "type": "string",
              "example": "123A"
            },
            "apartment": {
              "type": "number",
              "format": "int64",
              "minimum": 1,
              "example": 11
            },
            "entrance": {
              "type": "number",
              "format": "int64",
              "minimum": 1,
              "example": 3
            },
            "phone": {
              "type": "string",
              "example": "+380123456789"
            }
          }
        },
        "SignUpResponse": {
